generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String @id @unique
  email       String @unique
  name        String
  description String
  capacity    Int
  Area        Area[]
}

model Area {
  id                  String     @id @unique
  name                String
  maxCapacity         Int?
  hoursPerReservation Int?
  open                String?
  close               String?
  interval            Int?
  restaurantId        String     @unique
  restaurant          Restaurant @relation(fields: [restaurantId], references: [id])
  Booking             Booking[]
}

model Booking {
  id       String    @id @unique
  people   Int
  day      String
  start    String
  end      String
  areaId   String
  Area     Area      @relation(fields: [areaId], references: [id])
  clientId String    @unique
  Client   Client    @relation(fields: [clientId], references: [id])
  Service  Service[]
  tableId  String

  @@index([areaId, day], name: "areaId_date")
}

model Service {
  id      String    @id @unique
  name    String
  Booking Booking[]
}

model Client {
  id      String    @id @unique
  name    String
  email   String    @unique
  phone   String    @unique
  Booking Booking[]
}
