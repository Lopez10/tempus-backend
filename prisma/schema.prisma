generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String @id @unique
  email       String @unique
  name        String
  description String
  Area        Area[]
}

model Area {
  id           String      @id @unique
  name         String
  maxCapacity  Int
  restaurantId String      @unique
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  Book         Book[]
  Available    Available[]
}

model Available {
  id        String   @id @unique
  date      DateTime
  areaId    String
  available Int
  Area      Area     @relation(fields: [areaId], references: [id])
}

model Book {
  id       String    @id @unique
  people   Int
  dateTime DateTime
  areaId   String
  area     Area      @relation(fields: [areaId], references: [id])
  ClientId String    @unique
  Client   Client    @relation(fields: [ClientId], references: [id])
  Service  Service[]
  tableId  String
}

model Service {
  id   String @id @unique
  name String
  Book Book[]
}

model Client {
  id    String @id @unique
  name  String
  email String @unique
  phone String @unique
  Book  Book[]
}
